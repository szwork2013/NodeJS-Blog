<%- include header %>
<p>
  <% if(user && (user.username == post.username)) { %>
  <span><a class="edit" href="/p/<%= post.username %>/<%= post.time.day %>/<%= post.title %>/edit">Edit</a></span>
  <span><a class="edit" href="/p/<%= post.username %>/<%= post.time.day %>/<%= post.title %>/delete">Delete</a></span>
  <% } %>

</p>

<p class="info">
  Author: <a href="/u/<%= post.username %>"><%= post.username %></a>
  Date: <%= post.time.minute %>
  Tags:
  <% if (post.tags) { %>
    <% post.tags.forEach(function(tag, index) { %>
      <% if (tag) { %>
        <a class="tag" href="/tags/<%= tag %>"><%= tag %></a>
    <% } %>
  <% }) } %>
</p>

<p><%- post.post %></p>
<p class="info">Read: <%= post.pv %> | Comments: <%= post.comments.length%></p>



<%- include comment %>

<%- include footer %>